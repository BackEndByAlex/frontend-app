<link rel="stylesheet" href="./css/changePassword.css">

<section id="change" class="dashboard-section">
  <div class="password-detail-card">
    <!-- Rubrik -->
    <h1>Byt lösenord</h1>

    <!-- Formulär -->
    <form action="./passwords/<%= entry._id %>/change"
          method="POST"
          class="change-password-form">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">

      <!-- Fält med ikoner -->
      <label for="generated-password">Nytt lösenord:</label>
      <div class="password-icons">
        <input type="password" id="generated-password" name="password"
          placeholder="Ange nytt lösenord"
          required
          autocomplete="new-password"
        />
      </div>
      <!-- Åtgärdsknappar -->
      <div class="detail-actions">
        <button type="submit" class="btn-primary">Spara nytt lösenord</button>
        <a href="./dashboard" class="btn-secondary">Avbryt</a>
      </div>
    </form>
  </div>
</section>

