<% if (!locals.hideHeader) { %>
  <link rel="stylesheet" href="./css/header.css">
  <script type="module" src="./js/logout.js"></script>
  
  <!-- Top Navigation Header -->
  <header class="top-header">
    <div class="header-container">
      <!-- Logo med SVG -->
      <div class="logo">
        <a href="./">
          <img src="./img/crypto_key_logo.svg" alt="TimeLock Logo" class="logo-icon">
          <span class="logo-text">TimeLock</span>
        </a>
      </div>
      
      <!-- Main Navigation -->
      <nav class="main-nav">
        <a href="./" class="nav-link">Home</a>
        <a href="./dashboard" class="nav-link">Options</a>
        <a href="#" class="nav-link">FAQ</a>
        <a href="#contact" class="nav-link">Contact</a>
      </nav>
      
      <!-- Auth Buttons -->
      <div class="auth-buttons">
        <% if (typeof user !== 'undefined' && user) { %>
          <form id="logout-form" method="POST" action="./logout" style="display: inline;">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button type="submit" class="btn-logout">Logout</button>
          </form>
        <% } else { %>
          <a href="./login" class="btn-signin">Sign in</a>
          <a href="./register" class="btn-register">Register</a>
        <% } %>
      </div>
      
      <!-- Mobile Menu Toggle -->
      <button class="mobile-menu-toggle" aria-label="Toggle menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </div>
  </header>
<% } %>