<% if (!locals.hideHeader) { %>
  <link rel="stylesheet" href="./css/header-footer.css">
  <link rel="stylesheet" href="./css/sidebar.css">
  <script type="module" src="./js/logout.js"></script>
  <script type="module" src="./js/sidebarToggle.js"></script>
  
  <!-- Mobilmenyknapp -->
  <button class="menu-toggle" aria-label="Öppna meny">☰</button>
  
  <!-- SIDEBAR SOM HEADER -->
  <aside class="sidebar">
    <div class="sidebar-container">
      <!-- Logotyp -->
      <a href="./"><h2>🔐 TimeLock</h2></a>
  
      <!-- Navigering -->
      <nav class="sidebar-nav">
        <% if (typeof user !== 'undefined' && user) { %>
          <a class="sidebar-btn" href="./dashboard">📂 Dashboard</a>
          <a class="sidebar-btn" href="./setting">⚙️ Inställningar</a>
        <% } else { %>
          <a class="sidebar-btn" href="./register">📝 Registrera</a>
          <a class="sidebar-btn" href="./login">🔑 Logga in</a>
        <% } %>
      </nav>
    </div>
  
    <!-- Användarinformation (längst ner) -->
    <% if (typeof user !== 'undefined' && user) { %>
      <div class="sidebar-footer">
        <div class="user-info">
          <div class="avatar">👤</div>
          <div class="user-details">
            <span class="user-name"><%= user.name %></span>     
            <form id="logout-form" method="POST" action="./logout">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button type="submit" class="btn-logout">Logga ut</button>
            </form>
          </div>
        </div>
      </div>
    <% } %>
  </aside>
  <% } %>
  