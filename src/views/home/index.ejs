<link rel="stylesheet" href="./css/home.css"/>
<main class="hero">
  <div class="hero-content">
    <h1><span>Protect</span> your passwords</h1>
    <p>Securely store and manage all your passwords in one place</p>
    <% if (typeof user !== 'undefined' && user) { %>
      <a href="./dashboard" class="btn-primary">Gå till Dashboard</a>
    <% } else { %>
      <a href="./login" class="btn-primary">Get Started</a>
    <% } %>

    <!-- Feedback-formulär -->
    <div class="feedback-section">
      <h3>Leave anonymous feedback 💬</h3>
      <form id="feedback-form" action="./feedback/send" method="POST">
        <input type="hidden" name="_csrf" id="csrfToken" value="<%= csrfToken %>">
        <input type="text" name="message" id="feedback-message" placeholder="Type your message..." required>
        <button type="submit">Send</button>
      </form>
    </div>
  </div>
</main>

<!-- 📬 Feedback-visning nedanför main -->
<section class="feedback-display">
  <h3 class="feedback-heading">🗨️ Recent Feedback</h3>
  <ul id="feedback-list">
    <% if (feedbacks && feedbacks.length > 0) { %>
      <% feedbacks.forEach(fb => { %>
        <li class="fade-in"><%= fb.message %></li>
      <% }) %>
    <% } else { %>
      <li>Inget feedback ännu.</li>
    <% } %>
  </ul>
</section>

