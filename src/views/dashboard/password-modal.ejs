<!-- Password Modal -->
<div class="password-modal-overlay" id="passwordModalOverlay"></div>
<div class="password-modal" id="passwordModal">
  <!-- Modal Header -->
  <div class="password-modal-header">
    <h2>Password</h2>
    <button class="close-modal" id="closePasswordModal">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>
  </div>

  <!-- Modal Content -->
  <div class="password-modal-content">
    
    <!-- Action Buttons -->
    <div class="password-actions">
      <button class="password-action-btn active" data-action="generate">
        <span class="action-icon">üîê</span>
        Generate password
      </button>
      <button class="password-action-btn" data-action="passwords">
        <span class="action-icon">üìã</span>
        Your passwords
      </button>
      <button class="password-action-btn" data-action="create">
        <span class="action-icon">‚ûï</span>
        Create
      </button>
    </div>

    <!-- Search and Filter Section -->
    <div class="password-search-section">
      <div class="search-container">
        <input type="text" id="passwordSearch" placeholder="Search password" class="search-input">
        <button class="search-icon">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="M21 21L16.65 16.65"></path>
          </svg>
        </button>
      </div>
      <div class="filter-options">
        <button class="filter-btn active">
          <span class="filter-icon">üìÖ</span>
          Recent
        </button>
        <button class="filter-btn">
          <span class="filter-icon">üîΩ</span>
          Filter
        </button>
      </div>
    </div>

    <!-- Generator Section -->
    <div class="password-section generator-section active" id="generatorSection">
      <div class="password-generator">
        <div class="password-input-wrapper">
          <input type="text" id="generated-password" readonly placeholder="Generated password will appear here...">
          <div class="password-icons">
            <button type="button" id="toggle-password-visibility" class="icon-btn">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 5c-7.633 0-11 7-11 7s3.367 7 11 7 11-7 11-7-3.367-7-11-7zm0 12c-2.761 0-5-2.239-5-5s2.239-5 5-5 5 2.239 5 5-2.239 5-5 5zm0-8c-1.657 0-3 1.343-3 3s1.343 3 3 3 3-1.343 3-3-1.343-3-3-3z"/>
              </svg>
            </button>
            <button type="button" id="copy-password" class="icon-btn">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 21H9c-1.1 0-2-.9-2-2v-10h2v10h10v2zM15 17H5c-1.1 0-2-.9-2-2V5c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2v10c0 1.1-.9 2-2 2zm0-12H5v10h10V5z"/>
              </svg>
            </button>
          </div>
        </div>
        <button type="button" id="generate-password" class="btn-generate">Generate password</button>
      </div>
    </div>

    <!-- Saved Passwords Grid Section -->
    <div class="password-section passwords-section" id="passwordsSection">
      <div class="passwords-grid">
        <% 
        // S√§kerst√§ll att passwords existerar
        const userPasswords = typeof passwords !== 'undefined' ? passwords : [];
        %>
        <% if (Array.isArray(userPasswords) && userPasswords.length > 0) { %>
          <% userPasswords.forEach(entry => { %>
            <div class="password-card">
              <div class="password-card-header">
                <h4>Usage</h4>
                <button class="password-card-options">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="1"></circle>
                    <circle cx="12" cy="5" r="1"></circle>
                    <circle cx="12" cy="19" r="1"></circle>
                  </svg>
                </button>
              </div>
              <div class="password-card-content">
                <div class="service-name"><%= entry.service %></div>
                <div class="password-display">
                  <span class="password-hidden">‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢</span>
                  <button class="show-password-btn" data-password="<%= entry.password %>">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                      <circle cx="12" cy="12" r="3"></circle>
                    </svg>
                  </button>
                </div>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <div class="no-passwords">
            <p>No saved passwords yet.</p>
          </div>
        <% } %>
      </div>
    </div>

    <!-- Create Password Section -->
    <div class="password-section create-section" id="createSection">
      <form id="save-password-form" action="./save-password" method="POST" class="create-password-form">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        
        <div class="form-group">
          <label for="service">Service Name</label>
          <input type="text" name="service" id="service" placeholder="Enter service name" required>
        </div>
        
        <div class="form-group">
          <label for="username">Username/Email</label>
          <input type="text" name="username" id="username" placeholder="Enter username or email" required>
        </div>
        
        <div class="form-group">
          <label for="password-field">Password</label>
          <div class="password-input-wrapper">
            <input type="password" id="password-field" name="password" placeholder="Enter or generate password" required>
            <button type="button" class="generate-for-field-btn">Generate</button>
          </div>
        </div>
        
        <div class="form-actions">
          <button type="button" class="btn-cancel">Cancel</button>
          <button type="submit" class="btn-save">Save Password</button>
        </div>
      </form>
    </div>

  </div>
</div>