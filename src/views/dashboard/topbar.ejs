<header class="topbar">
  <!-- Breadcrumb -->
  <div class="breadcrumb">
    <a href="#" class="breadcrumb-item">
      <span>üè†</span>
      <span>Home</span>
    </a>
    <span class="breadcrumb-separator">/</span>
    <a href="#dashboard" class="breadcrumb-item">
      <span>üìä</span>
      <span>Dashboard</span>
    </a>
    <span class="breadcrumb-separator">/</span>
    <span class="breadcrumb-current">Dashboard</span>
  </div>

  <!-- Actions -->
  <div class="topbar-actions">
    <!-- Search -->
    <div class="action-item">
      <button class="action-button search-button" aria-label="Search">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="11" cy="11" r="8"></circle>
          <path d="M21 21L16.65 16.65"></path>
        </svg>
      </button>
      <span class="action-label">Search</span>
    </div>

    <!-- X/+ Toggle -->
    <div class="action-item">
      <button class="action-button toggle-button" id="toggleButton" aria-label="Toggle verify">
        √ó
      </button>
      <span class="action-label">Verify</span>
    </div>

    <!-- Notifications -->
    <div class="action-item">
      <button class="action-button notification-button" aria-label="Notifications">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path
            d="M18 8C18 6.4087 17.3679 4.88258 16.2426 3.75736C15.1174 2.63214 13.5913 2 12 2C10.4087 2 8.88258 2.63214 7.75736 3.75736C6.63214 4.88258 6 6.4087 6 8C6 15 3 17 3 17H21C21 17 18 15 18 8Z">
          </path>
          <path
            d="M13.73 21C13.5542 21.3031 13.3019 21.5547 12.9982 21.7295C12.6946 21.9044 12.3504 21.9965 12 21.9965C11.6496 21.9965 11.3054 21.9044 11.0018 21.7295C10.6982 21.5547 10.4458 21.3031 10.27 21">
          </path>
        </svg>
        <span class="notification-badge"></span>
      </button>
      <span class="action-label">Notification</span>
    </div>

    <!-- User Profile -->
    <div class="action-item">
      <div class="user-profile">
        <div class="user-avatar">
          <%= user?.name?.charAt(0).toUpperCase() || 'U' %>
        </div>
      </div>
      <span class="action-label">Profile</span>
    </div>
  </div>
</header>